<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.0.0">
           
	<reference-list id="creditServices" interface="de.codecentric.javaland.calculator.CreditCalculator"/>

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.1.0">
        <command>
            <action class="de.nierbeck.javaland.command.Calculate">
            	<property name="creditServiceContainer" ref="creditServiceContainer"/>
            </action>
            <completers>
            	<ref component-id="serviceNamesCompleter"/>
            </completers>
        </command>
    </command-bundle>
    
    <bean id="serviceNamesCompleter" class="de.nierbeck.javaland.command.completer.CreditCalculatorServiceCompleter">
    	<property name="creditCalculatorServices" ref="creditServices" />
    </bean>
    
    <bean id="creditServiceContainer" class="de.nierbeck.javaland.command.CreditServiceContainer">
    	<property name="creditCalculatorServices" ref="creditServices" />
    </bean>
</blueprint>
